<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/first_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/card_margin"
    card_view:cardBackgroundColor="@color/CardBackgroundHourlyForecast"
    card_view:cardCornerRadius="20dp"
    card_view:cardElevation="9dp"
    card_view:contentPadding="6dp"
    style="@style/AppTheme">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">


        <TextView
            android:id="@+id/time_one_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:textColor="@color/CardTwotextColor"
            android:textSize="@dimen/card_two_text_size"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"></TextView>

        <ImageView
            android:id="@+id/icon_one_display"
            android:layout_width="@dimen/weather_icon_size"
            android:layout_height="@dimen/weather_icon_size"
            android:layout_marginTop="16dp"
            card_view:layout_constraintEnd_toEndOf="@+id/time_one_display"
            card_view:layout_constraintStart_toStartOf="@+id/time_one_display"
            card_view:layout_constraintTop_toBottomOf="@+id/time_one_display">

        </ImageView>

        <TextView
            android:id="@+id/temp_one_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textColor="@color/CardTwotextColor"
            android:textSize="@dimen/card_two_text_size_temp"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="@+id/icon_one_display"
            card_view:layout_constraintStart_toStartOf="@+id/icon_one_display"
            card_view:layout_constraintTop_toBottomOf="@+id/icon_one_display"
            card_view:layout_constraintVertical_bias="0.0">
        </TextView>


        <TextView
            android:id="@+id/time_two_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="4dp"
            android:textColor="@color/CardTwotextColor"
            android:textSize="@dimen/card_two_text_size"
            card_view:layout_constraintStart_toEndOf="@+id/time_one_display"
            card_view:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/icon_two_display"
            android:layout_width="@dimen/weather_icon_size"
            android:layout_height="@dimen/weather_icon_size"
            android:layout_marginTop="16dp"
            card_view:layout_constraintEnd_toEndOf="@+id/time_two_display"
            card_view:layout_constraintStart_toStartOf="@+id/time_two_display"
            card_view:layout_constraintTop_toBottomOf="@+id/time_two_display">

        </ImageView>

        <TextView
            android:id="@+id/temp_two_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Lahore"
            android:textColor="@color/CardTwotextColor"
            android:textSize="@dimen/card_two_text_size_temp"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="@+id/time_two_display"
            card_view:layout_constraintStart_toStartOf="@+id/time_two_display"
            card_view:layout_constraintTop_toBottomOf="@+id/icon_two_display"
            card_view:layout_constraintVertical_bias="1.0">

        </TextView>

        <TextView
            android:id="@+id/time_three_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="4dp"
            android:textColor="@color/CardTwotextColor"
            android:textSize="@dimen/card_two_text_size"
            card_view:layout_constraintStart_toEndOf="@+id/time_two_display"
            card_view:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/icon_three_display"
            android:layout_width="@dimen/weather_icon_size"
            android:layout_height="@dimen/weather_icon_size"
            android:layout_marginTop="16dp"
            card_view:layout_constraintEnd_toEndOf="@+id/time_three_display"
            card_view:layout_constraintStart_toStartOf="@+id/time_three_display"
            card_view:layout_constraintTop_toBottomOf="@+id/time_three_display">

        </ImageView>

        <TextView
            android:id="@+id/temp_three_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/CardTwotextColor"
            android:textSize="@dimen/card_two_text_size_temp"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="@+id/time_three_display"
            card_view:layout_constraintHorizontal_bias="0.0"
            card_view:layout_constraintStart_toStartOf="@+id/time_three_display"
            card_view:layout_constraintTop_toBottomOf="@+id/icon_three_display"
            card_view:layout_constraintVertical_bias="1.0">
        </TextView>

        <TextView
            android:id="@+id/time_four_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="4dp"
            android:textColor="@color/CardTwotextColor"
            android:textSize="@dimen/card_two_text_size"
            card_view:layout_constraintStart_toEndOf="@+id/time_three_display"
            card_view:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/icon_four_display"
            android:layout_width="@dimen/weather_icon_size"
            android:layout_height="@dimen/weather_icon_size"
            android:layout_marginTop="16dp"
            card_view:layout_constraintEnd_toEndOf="@+id/time_four_display"
            card_view:layout_constraintStart_toStartOf="@+id/time_four_display"
            card_view:layout_constraintTop_toBottomOf="@+id/time_four_display">

        </ImageView>

        <TextView
            android:id="@+id/temp_four_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/CardTwotextColor"
            android:textSize="@dimen/card_two_text_size_temp"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="@+id/time_four_display"
            card_view:layout_constraintHorizontal_bias="0.0"
            card_view:layout_constraintStart_toStartOf="@+id/time_four_display"
            card_view:layout_constraintTop_toBottomOf="@+id/icon_four_display"
            card_view:layout_constraintVertical_bias="1.0">

        </TextView>

        <TextView
            android:id="@+id/time_five_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="4dp"
            android:textColor="@color/CardTwotextColor"
            android:textSize="@dimen/card_two_text_size"
            card_view:layout_constraintStart_toEndOf="@+id/time_four_display"
            card_view:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/icon_five_display"
            android:layout_width="@dimen/weather_icon_size"
            android:layout_height="@dimen/weather_icon_size"
            android:layout_marginTop="16dp"
            card_view:layout_constraintEnd_toEndOf="@+id/time_five_display"
            card_view:layout_constraintStart_toStartOf="@+id/time_five_display"
            card_view:layout_constraintTop_toBottomOf="@+id/time_five_display">

        </ImageView>

        <TextView
            android:id="@+id/temp_five_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/CardTwotextColor"
            android:textSize="@dimen/card_two_text_size_temp"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="@+id/time_four_display"
            card_view:layout_constraintHorizontal_bias="0.0"
            card_view:layout_constraintStart_toStartOf="@+id/time_five_display"
            card_view:layout_constraintTop_toBottomOf="@+id/icon_five_display"
            card_view:layout_constraintVertical_bias="1.0">

        </TextView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
